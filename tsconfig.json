{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
